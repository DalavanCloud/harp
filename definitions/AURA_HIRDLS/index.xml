<?xml version="1.0"?>
<cd:ProductClass xmlns:cd="http://www.stcorp.nl/coda/definition/2008/07" name="AURA_HIRDLS" last-modified="2016-09-22">
  <cd:Description>Aura HIRDLS products</cd:Description>
  <cd:ProductType name="HIRDLS2">
    <cd:Description>HIRDLS L2</cd:Description>
    <cd:ProductDefinition id="HIRDLS2" format="hdf5" version="0">
      <cd:Description>The format definition for this product is taken from the HDF5 file itself.</cd:Description>
      <cd:DetectionRule>
        <cd:MatchExpression path="/HDFEOS/ADDITIONAL/FILE_ATTRIBUTES">str(.@InstrumentName,6) == "HIRDLS"</cd:MatchExpression>
        <cd:MatchExpression>str(.@HIRDLSFileType,7) == "HIRDLS2"</cd:MatchExpression>
      </cd:DetectionRule>
    </cd:ProductDefinition>
  </cd:ProductType>
</cd:ProductClass>
